%h2.uk-text-center Change your password
.uk-flex.uk-flex-center.uk-flex-row
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    = f.hidden_field :reset_password_token
    .field
      = f.label :password, "New password", class: 'uk-input uk-form-width-large'
      %br/
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
        %br/
      = f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'uk-input uk-form-width-large'
    .field
      = f.label :password_confirmation, "Confirm new password"
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'uk-input uk-form-width-large'
    .actions.uk-text-center
      = f.submit "Change my password", class: 'uk-button uk-button-default uk-margin-medium-top uk-margin-medium-bottom'
= render "devise/shared/links"
