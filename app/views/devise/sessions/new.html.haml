%h2.uk-text-center Log in
.uk-flex.uk-flex-center.uk-flex-row
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'uk-input uk-form-width-large'
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password", class: 'uk-input uk-form-width-large'
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions.uk-text-center
      = f.submit "Log in", class: 'uk-button uk-button-default uk-margin-medium-top uk-margin-medium-bottom'
= render "devise/shared/links"
